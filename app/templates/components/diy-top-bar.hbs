<div id="nav" class="pure-u {{if menuActive 'active'}}">
<a {{action "showMenu"}} class="nav-menu-button">Menu</a>
  <div class="nav-inner">
    <div class="pure-menu">
      <ul class="pure-menu-list">
          <li class="pure-menu-item">
            {{#link-to "skills" classNames="pure-menu-link"}}Skills{{/link-to}}
          </li>
          {{#if session.isSignedIn}}
            <li class="pure-menu-item">
              {{#link-to "portfolio" classNames="pure-menu-link"}}Portfolio{{/link-to}}
            </li>
          {{else}}
            <li class="pure-menu-item">
              {{#link-to "authorize" classNames="pure-menu-link"}}Sign-in{{/link-to}}
            </li>
          {{/if}}
      </ul>
    {{#if session.isSignedIn}}
      <button class="primary-button pure-button" {{action "signOut"}}>Sign-out</button>
    {{/if}}

    </div>

  </div>
</div>

